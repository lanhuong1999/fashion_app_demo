<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_category2_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="178:200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_category2_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_item_category"
        android:ellipsize="marquee"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_category2_image"
        app:layout_constraintEnd_toEndOf="@id/item_category2_image"
        app:layout_constraintTop_toTopOf="@id/item_category2_image"
        app:layout_constraintWidth_percent="0.387" />

</androidx.constraintlayout.widget.ConstraintLayout>