<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/coupon_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/coupons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:background="#7A7979"
            android:paddingLeft="3dp"
            app:layout_constraintStart_toEndOf="@+id/coupon_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coupon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coupon_img"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="Giảm giá: "
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/coupon_img"
            app:layout_constraintTop_toBottomOf="@+id/coupon_id" />

        <TextView
            android:id="@+id/coupon_soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="Số lượng: "
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/coupon_img"
            app:layout_constraintTop_toBottomOf="@+id/coupon_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>